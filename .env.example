# ===========================================
# LINE完結型AGI経理システム - 環境変数設定
# ===========================================

# Database
DATABASE_URL=postgresql://postgres:password@db:5432/accounting_db

# LINE Messaging API
# Get at: https://developers.line.biz/
LINE_CHANNEL_ACCESS_TOKEN=your_line_channel_access_token_here
LINE_CHANNEL_SECRET=your_line_channel_secret_here

# Claude API (Anthropic)
# Get at: https://console.anthropic.com/
CLAUDE_API_KEY=sk-ant-your_claude_api_key_here

# Google Cloud Vision API (OCR) - Optional
# Get at: https://console.cloud.google.com/
GOOGLE_CLOUD_VISION_API_KEY=your_vision_api_key_here

# OpenAI API (Whisper) - Optional
# Get at: https://platform.openai.com/
OPENAI_API_KEY=sk-your_openai_api_key_here

# Redis
REDIS_URL=redis://redis:6379/0

# Celery
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# Application
APP_NAME=LINE会計AGI
DEBUG=True

# ===========================================
# Miyabi Agent Configuration (optional)
# ===========================================
GITHUB_TOKEN=ghp_your_github_token_here
REPOSITORY=ryoma373639/https-github.com-ryoma373639-keiri-jimu
ANTHROPIC_API_KEY=sk-ant-your_anthropic_key_here
DEVICE_IDENTIFIER=MyComputer
LOG_DIRECTORY=.ai/logs
REPORT_DIRECTORY=.ai/parallel-reports
DEFAULT_CONCURRENCY=2
USE_TASK_TOOL=false
USE_WORKTREE=false
